doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Lista de Cursos
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    .container.mt-5
      h1 Lista de Cursos

      ul.list-group
        each curso in cursos
          li.list-group-item.d-flex.justify-content-between.align-items-center
            | #{curso.nombre} - #{curso.profesor} (ID Alumno: #{curso.id_alumno})
            span.d-flex
              a.btn.btn-primary(href=`/editar-curso/${curso.id}`) Editar
              form(action=`/eliminar-curso/${curso.id}`, method="POST", style="display: inline-block;")
                button.btn.btn-danger(type="submit") Eliminar

      h2.mt-4 Agregar nuevo curso

      form(action="/cursos/agregar", method="POST")
        .mb-3
          label(for="nuevoCurso", class="form-label") Nombre del Curso
          input#nuevoCurso.form-control(type="text", name="nuevoCurso", placeholder="Ingrese el nuevo nombre para el curso", required)
        .mb-3
          label(for="profesor", class="form-label") Profesor
          input#profesor.form-control(type="text", name="profesor", placeholder="Ingrese el nuevo profesor", required)
        .mb-3
          label(for="idAlumno", class="form-label") ID del Alumno
          select#idAlumno.form-select(name="idAlumno", required)
            each alumno in listaAlumnos
              option(value=alumno.id) #{alumno.columna1}
        .mt-3
          button.btn.btn-primary(type="submit") Agregar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js", integrity="sha384-b4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+Wy0GAPqL1O2gqPejdmVPddM",
    crossorigin="anonymous")
