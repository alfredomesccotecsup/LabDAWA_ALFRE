doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Detalles del Alumno y Cursos
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    .container.mt-5
      h1 Detalles del Alumno y Cursos
      br
      br
      h2 Nombre: #{alumno.columna1}
      h2 Apellido: #{alumno.columna3}

      h2 Lista de Cursos
      table.table
        thead
          tr
            th(scope="col") Nombre
            th(scope="col") Profesor
            th(scope="col") ID del Alumno
            th(scope="col") Acciones
        tbody
          each curso in cursos
            tr
              td= curso.nombre
              td= curso.profesor
              td= curso.id_alumno
              td
                a(href=`/editar-curso/${curso.id}`, class="btn btn-primary") Editar
                form(action=`/eliminar-curso/${curso.id}`, method="POST", style="display: inline-block;")
                  button(type="submit", class="btn btn-danger") Eliminar

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js", integrity="sha384-A46Nql7t0pMd6cZF4GXbDeaUnA6s7xBsN+9XQDffkO3YDIf/sYScDjzuWpDxm2j", crossorigin="anonymous")